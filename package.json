{
	"author": "Yogev Boaron Ben-Har",
	"description": "A simple CLI for packaging Svelte components",
	"devDependencies": {
		"eslint": "^7.15.0",
		"eslint-config-prettier": "^7.0.0",
		"prettier": "^2.2.1"
	},
	"name": "svelte-packagr",
	"prettier": {
		"singleQuote": true,
		"tabWidth": 4,
		"trailingComma": "all",
		"useTabs": true
	},
	"private": true,
	"scripts": {
		"build:lib": "pnpm build --filter svelte-packagr",
		"publish:lib": "pnpm publish --filter svelte-packagr",
		"start:pnpm": "pnpm start --filter @templates/pnpm"
	},
	"version": "0.0.1"
}
